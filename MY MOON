      display: flex;
      justify-content: center;
      align-items: center;
      background: pink;
      color: #00ffcc;
      font-family: monospace;
      text-align: center;
    }
    .box {
      border: 2px solid #00ffcc;
      padding: 30px;
      border-radius: 10px;
      animation: glow 2s infinite alternate;
    }
    @keyframes glow {
      from { box-shadow: 0 0 10px #00ffcc; }
      to { box-shadow: 0 0 30px #00ffcc; }
    }
  </style>
