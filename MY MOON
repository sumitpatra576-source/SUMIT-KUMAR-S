<body>

<div class="box">
  <h2>Scanning Complete...</h2>
  <p id="text"></p>
</div>

<script>
let msg = "Something about you... You are the best thing that ever happened to me ❤️";
let i = 0;

function typeEffect() {
  if (i < msg.length) {
    document.getElementById("text").innerHTML += msg.charAt(i);
    i++;
    setTimeout(typeEffect, 60);
  }
}

typeEffect();
</script>

</body>
